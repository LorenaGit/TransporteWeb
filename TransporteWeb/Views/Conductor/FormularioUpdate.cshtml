

@using TransporteWeb.Models;
@{
    Layout = null;
    Conductor c = ViewBag.conductor;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>FormularioUpdate</title>
</head>
<body>
    <div>
        <form method="GET" action="/Conductor/Actualizar">
            <table>
                <tr>
                    <td>IdConductor</td>
                    <td><input type="text" name="IdConductor" readonly="readonly" value="@c.IdConductor" /></td>
                </tr>
                <tr>
                    <td>Nombre</td>
                    <td><input type="text" name="Nombre" value="@c.Nombre" /></td>
                </tr>
                <tr>
                    <td>Cedula</td>
                    <td><input type="text" name="Cedula" value="@c.Cedula" /></td>
                </tr>
                <tr>
                    <td>Telefono</td>
                    <td><input type="text" name="Telefono" value="@c.Telefono" /></td>
                </tr>
                <tr>
                    <td colspan="2"><input type="submit" value="Guardar" /></td>
                </tr>

            </table>

        </form>

    </div>
</body>
</html>


